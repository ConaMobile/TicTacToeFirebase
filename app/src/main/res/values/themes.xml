<resources>

    <style name="Theme.TicTacToeFirebase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="enterAnim">@anim/enter_from_right</item>
        <item name="exitAnim">@anim/exit_to_left</item>
        <item name="popEnterAnim">@anim/enter_from_left</item>
        <item name="popExitAnim">@anim/exit_to_right</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>
</resources>